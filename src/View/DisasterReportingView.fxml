<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" stylesheets="@../Styles/mainStyle.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.DisasterReportingController">
   <children>
      <Label layoutX="82.0" layoutY="-6.0" stylesheets="@../Styles/mainStyle.css" text="Disaster Response System" textFill="#9e2424">
         <font>
            <Font name="Arial Black" size="27.0" />
         </font>
      </Label>
      <TabPane layoutX="23.0" layoutY="40.0" prefHeight="358.0" prefWidth="547.0" tabClosingPolicy="UNAVAILABLE">
        <tabs>
          <Tab text="Report Disaster">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <VBox prefHeight="328.0" prefWidth="547.0" spacing="10.0">
                           <padding>
                              <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                           </padding>
                           <children>
                              <Label text="Report a Disaster" />
                              <ComboBox fx:id="disasterTypeComboBox" prefWidth="150.0" promptText="Select Disaster Type" />
                              <TextField fx:id="locationField" promptText="Location" />
                              <HBox prefHeight="42.0" prefWidth="322.0" spacing="10.0">
                                 <children>
                                    <Label text="Severity:">
                                       <padding>
                                          <Insets left="10.0" />
                                       </padding>
                                    </Label>
                                    <Slider fx:id="severitySlider" max="10.0" min="1.0" showTickLabels="true" showTickMarks="true" />
                                 </children>
                              </HBox>
                              <TextArea fx:id="descriptionArea" prefHeight="200.0" prefWidth="200.0" promptText="Description" VBox.vgrow="ALWAYS" />
                              <Button mnemonicParsing="false" onAction="#submitReport" text="Submit Report" />
                              <Button mnemonicParsing="false" onAction="#MainMenuButton" text="Main Menu" />
                           </children>
                        </VBox>
                     </children>
                  </AnchorPane>
            </content>
          </Tab>
          <Tab text="View Disaster">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <VBox layoutX="-1.0" prefHeight="328.0" prefWidth="547.0" spacing="10.0">
                           <padding>
                              <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                           </padding>
                           <children>
                              <Label text="Reported Disasters" />
                              <TableView fx:id="disasterTable" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
                                <columns>
                                  <TableColumn fx:id="reportIdColumn" prefWidth="67.20007628202438" text="Report ID" />
                                  <TableColumn fx:id="disasterTypeColumn" prefWidth="122.39990234375" text="Disaster Type" />
                                    <TableColumn fx:id="locationColumn" prefWidth="109.60002136230469" text="Location" />
                                    <TableColumn fx:id="severityColumn" prefWidth="56.79998779296875" text="Severity" />
                                    <TableColumn fx:id="statusColumn" prefWidth="86.4000244140625" text="Status" />
                                    <TableColumn fx:id="timestampColumn" prefWidth="74.39996337890625" text="Timestamp" />
                                </columns>
                              </TableView>
                              <HBox prefHeight="100.0" prefWidth="200.0" spacing="10.0">
                                 <children>
                                    <Button mnemonicParsing="false" onAction="#refreshDisasterList" text="Refresh" />
                                    <Button mnemonicParsing="false" onAction="#viewDisasterDetails" text="View Details" />
                                    <Button mnemonicParsing="false" onAction="#MainMenuButton2" text="Main Menu" />
                                 </children>
                              </HBox>
                           </children>
                        </VBox>
                     </children>
                  </AnchorPane>
            </content>
          </Tab>
        </tabs>
      </TabPane>
   </children>
</AnchorPane>
