<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" styleClass="mainFxmlClass" stylesheets="@../Styles/mainStyle.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.CommunicationHubController">
   <children>
      <VBox alignment="TOP_CENTER" layoutX="8.0" layoutY="8.0" prefHeight="387.0" prefWidth="585.0">
         <children>
            <Label text="Communication Hub" textFill="#991f1f">
               <font>
                  <Font name="Arial Black" size="27.0" />
               </font>
            </Label>
            <HBox prefHeight="20.0" prefWidth="586.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#goBackAction" text="Go Back" />
               </children>
            </HBox>
            <TabPane prefHeight="200.0" prefWidth="200.0" tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS">
              <tabs>
                <Tab text="Notification">
                  <content>
                    <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                           <children>
                              <VBox layoutX="8.0" layoutY="7.0" prefHeight="306.0" prefWidth="569.0" spacing="10.0">
                                 <children>
                                    <HBox prefHeight="31.0" prefWidth="570.0" spacing="10.0">
                                       <children>
                                          <ComboBox fx:id="recipientTypeComboBox" prefHeight="26.0" prefWidth="167.0" promptText="Select Recipient Type" />
                                          <TextField fx:id="notificationTitleField" prefHeight="26.0" prefWidth="193.0" promptText="Notification Title" />
                                       </children>
                                    </HBox>
                                    <TextArea fx:id="notificationContentArea" prefHeight="200.0" prefWidth="200.0" promptText="Notification Content" VBox.vgrow="ALWAYS" />
                                    <Button mnemonicParsing="false" onAction="#sendNotification" text="Send Notification" />
                                    <TableView fx:id="sentNotificationsTable" prefHeight="200.0" prefWidth="200.0">
                                      <columns>
                                        <TableColumn fx:id="notificationTimestampColumn" prefWidth="143.99993896484375" text="Timestamp" />
                                        <TableColumn fx:id="notificationRecipientColumn" prefWidth="208.0" text="Recipient" />
                                          <TableColumn fx:id="notificationTitleColumn" minWidth="2.39996337890625" prefWidth="216.00006103515625" text="Title" />
                                      </columns>
                                    </TableView>
                                 </children>
                              </VBox>
                           </children>
                        </AnchorPane>
                  </content>
                </Tab>
                <Tab text="Alerts">
                  <content>
                    <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                           <children>
                              <VBox layoutX="8.0" layoutY="6.0" prefHeight="308.0" prefWidth="570.0" spacing="10.0">
                                 <children>
                                    <HBox prefHeight="33.0" prefWidth="570.0" spacing="10.0">
                                       <children>
                                          <ComboBox fx:id="alertTypeComboBox" prefWidth="150.0" promptText="Select Alert Type" />
                                          <TextField fx:id="alertLocationField" promptText="Location" />
                                       </children>
                                    </HBox>
                                    <TextArea fx:id="alertDetailsArea" prefHeight="200.0" prefWidth="200.0" promptText="Alert Details" VBox.vgrow="ALWAYS" />
                                    <Button mnemonicParsing="false" onAction="#sendAlert" text="Send Alert" />
                                    <TableView fx:id="sentAlertsTable" prefHeight="200.0" prefWidth="200.0">
                                      <columns>
                                        <TableColumn fx:id="alertTimestampColumn" prefWidth="120.79998779296875" text="Timestamp" />
                                        <TableColumn fx:id="alertTypeColumn" prefWidth="187.20001220703125" text="Type" />
                                          <TableColumn fx:id="alertLocationColumn" prefWidth="259.99993896484375" text="Location" />
                                      </columns>
                                    </TableView>
                                 </children>
                              </VBox>
                           </children>
                        </AnchorPane>
                  </content>
                </Tab>
                  <Tab text="Information Exchange">
                     <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                           <children>
                              <VBox layoutX="8.0" layoutY="6.0" prefHeight="308.0" prefWidth="570.0" spacing="10.0">
                                 <children>
                                    <HBox prefHeight="33.0" prefWidth="570.0" spacing="10.0">
                                       <children>
                                          <ComboBox fx:id="subsystemComboBox" prefWidth="150.0" promptText="Select Subsystem" />
                                          <TextField fx:id="messageSubjectField" promptText="Message Subject" />
                                       </children>
                                    </HBox>
                                    <TextArea fx:id="messageContentArea" prefHeight="200.0" prefWidth="200.0" promptText="Message Content" VBox.vgrow="ALWAYS" />
                                    <Button mnemonicParsing="false" onAction="#sendMessage" text="Send Message" />
                                    <TableView fx:id="sentMessagesTable" prefHeight="200.0" prefWidth="200.0">
                                       <columns>
                                          <TableColumn fx:id="messageTimestampColumn" prefWidth="120.79998779296875" text="Timestamp" />
                                          <TableColumn fx:id="messageFromColumn" prefWidth="148.0" text="From" />
                                          <TableColumn fx:id="messageToColumn" prefWidth="132.00006103515625" text="To" />
                                          <TableColumn fx:id="messageSubjectColumn" prefWidth="168.79998779296875" text="Subject" />
                                       </columns>
                                    </TableView>
                                 </children>
                              </VBox>
                           </children>
                        </AnchorPane>
                     </content>
                  </Tab>
              </tabs>
            </TabPane>
         </children>
      </VBox>
   </children>
</AnchorPane>
