<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" stylesheets="@../Styles/mainStyle.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.ResourceManagementController">
   <children>
      <VBox alignment="TOP_CENTER" prefHeight="400.0" prefWidth="600.0">
         <children>
            <Label alignment="TOP_CENTER" contentDisplay="CENTER" text="Resource Management" textAlignment="CENTER" textFill="#9c1c1c">
               <font>
                  <Font name="Arial Black" size="27.0" />
               </font>
            </Label>
            <HBox fx:id="quantityField" prefHeight="56.0" prefWidth="579.0" spacing="10.0">
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <VBox.margin>
                  <Insets left="10.0" right="10.0" />
               </VBox.margin>
               <children>
                  <ComboBox fx:id="resourceTypeComboBox" prefHeight="26.0" prefWidth="183.0" promptText="Select Resource Type">
                     <HBox.margin>
                        <Insets left="10.0" top="10.0" />
                     </HBox.margin>
                  </ComboBox>
                  <TextField fx:id="quantityTextField" promptText="Quantity">
                     <HBox.margin>
                        <Insets left="10.0" top="10.0" />
                     </HBox.margin>
                  </TextField>
                  <Button mnemonicParsing="false" onAction="#addResource" text="Add Resource">
                     <HBox.margin>
                        <Insets left="10.0" top="10.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
            <TableView fx:id="resourceTable" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
              <columns>
                <TableColumn fx:id="resourceIdColumn" prefWidth="96.0" text="Resource ID" />
                <TableColumn fx:id="typeColumn" prefWidth="258.4000244140625" text="Type" />
                  <TableColumn fx:id="quantityColumn" minWidth="0.0" prefWidth="120.79998779296875" text="Quantity" />
                  <TableColumn fx:id="statusColumn" prefWidth="123.20001220703125" text="Status" />
              </columns>
            </TableView>
            <HBox prefHeight="100.0" prefWidth="200.0" spacing="10.0">
               <children>
                  <Label text="Allocate Resources:">
                     <HBox.margin>
                        <Insets left="10.0" top="10.0" />
                     </HBox.margin>
                  </Label>
                  <ComboBox fx:id="disasterComboBox" prefWidth="150.0" promptText="Select Disaster">
                     <HBox.margin>
                        <Insets left="10.0" top="10.0" />
                     </HBox.margin>
                  </ComboBox>
                  <Button mnemonicParsing="false" onAction="#allocateResources" text="Allocate">
                     <HBox.margin>
                        <Insets left="10.0" top="10.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
            <TextArea fx:id="allocationDetailsArea" prefHeight="200.0" prefWidth="200.0" promptText="Allocation Details" VBox.vgrow="ALWAYS" />
            <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#updateResourceStatus" text="Update Resource Status " />
                  <Button mnemonicParsing="false" onAction="#generateResourceReport" text="Generate Report" />
                  <Button mnemonicParsing="false" onAction="#goBackAction" text="Go Back" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
