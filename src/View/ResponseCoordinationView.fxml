<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" styleClass="mainFxmlClass" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.ResponseCoordinationController">
    <stylesheets>
        <URL value="@/Styles/mainStyle.css" />
    </stylesheets>
   <children>
      <VBox alignment="TOP_CENTER" layoutX="-2.0" prefHeight="400.0" prefWidth="600.0">
         <children>
            <Label alignment="CENTER" contentDisplay="CENTER" text="Response Coordination Dashboard" textFill="#962f2f">
               <font>
                  <Font name="Arial Black" size="27.0" />
               </font></Label>
            <HBox prefHeight="28.0" prefWidth="600.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#goBackAction" text="Go Back" />
               </children>
            </HBox>
            <TabPane prefHeight="200.0" prefWidth="200.0" tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS">
              <tabs>
                <Tab text="Active Disaster Overview">
                  <content>
                    <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                           <children>
                              <TableView fx:id="disasterTable" layoutX="14.0" layoutY="14.0" prefHeight="259.0" prefWidth="575.0">
                                <columns>
                                  <TableColumn fx:id="disasterIdColumn" prefWidth="97.60003471374512" text="Disaster ID" />
                                  <TableColumn fx:id="disasterTypeColumn" prefWidth="111.19995880126953" text="Type" />
                                    <TableColumn fx:id="locationColumn" prefWidth="132.00006103515625" text="Location" />
                                    <TableColumn fx:id="severityColumn" prefWidth="112.79998779296875" text="Severity" />
                                    <TableColumn fx:id="statusColumn" minWidth="2.39990234375" prefWidth="116.80001831054688" text="Status" />
                                </columns>
                              </TableView>
                           </children>
                        </AnchorPane>
                  </content>
                </Tab>
                <Tab text="Agency Coordination">
                  <content>
                    <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                           <children>
                              <VBox layoutX="14.0" layoutY="14.0" prefHeight="305.0" prefWidth="570.0">
                                 <children>
                                    <HBox fx:id="agencySelector" prefHeight="48.0" prefWidth="570.0">
                                       <children>
                                          <ComboBox fx:id="agencyComboBox" prefWidth="150.0" promptText="Select Agency">
                                             <HBox.margin>
                                                <Insets left="10.0" top="10.0" />
                                             </HBox.margin>
                                          </ComboBox>
                                          <ComboBox fx:id="disasterComboBox" prefWidth="150.0" promptText="Select Disaster">
                                             <HBox.margin>
                                                <Insets left="10.0" top="10.0" />
                                             </HBox.margin>
                                          </ComboBox>
                                          <Button mnemonicParsing="false" onAction="#assignAgencyToDisaster" text="Assign to Disaster">
                                             <HBox.margin>
                                                <Insets left="10.0" top="10.0" />
                                             </HBox.margin>
                                          </Button>
                                       </children>
                                    </HBox>
                                    <TableView fx:id="agencyAssignmentTable" prefHeight="200.0" prefWidth="200.0">
                                      <columns>
                                        <TableColumn fx:id="assignmentIdColumn" prefWidth="82.40002250671387" text="Assignment ID" />
                                        <TableColumn fx:id="agencyColumn" prefWidth="133.59998321533203" text="Agency" />
                                          <TableColumn fx:id="assignedDisasterColumn" prefWidth="152.79998779296875" text="Assigned Disaster" />
                                          <TableColumn fx:id="assignmentDateColumn" prefWidth="124.0" text="Assignment Date" />
                                          <TableColumn fx:id="assignmentStatusColumn" prefWidth="76.80001831054688" text="Status" />
                                      </columns>
                                    </TableView>
                                 </children></VBox>
                           </children>
                        </AnchorPane>
                  </content>
                </Tab>
                  <Tab text="Strategic Decisions">
                     <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                           <children>
                              <VBox layoutX="14.0" layoutY="14.0" prefHeight="317.0" prefWidth="570.0">
                                 <children>
                                    <TextArea fx:id="strategicDecisionArea" prefHeight="202.0" prefWidth="570.0" promptText="Enter strategic decisions here..." VBox.vgrow="ALWAYS" />
                                    <Button mnemonicParsing="false" onAction="#saveStrategicDecision" text="Save Decision" />
                                 </children>
                              </VBox>
                           </children>
                        </AnchorPane>
                     </content>
                  </Tab>
              </tabs>
            </TabPane>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#generateReport" text="Generate Report">
                     <HBox.margin>
                        <Insets left="10.0" top="10.0" />
                     </HBox.margin>
                  </Button>
                  <Button mnemonicParsing="false" onAction="#updateResponseEfforts" text="Update Resource Effort">
                     <HBox.margin>
                        <Insets left="10.0" top="10.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
